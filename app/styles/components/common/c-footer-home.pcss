.c-footer-home {
  text-align: center;

  .icon-logo {
    max-width: 75px;
    max-height: 75px;
    margin: 5px auto 0;

    &.-eu {
      margin-top: 0;
      height: 50px;
    }

    @media (--medium-viewport) {
      max-width: 100px;
      max-height: 100px;

      &.-eu {
        height: auto;
      }
    }
  }

  .text {
    color: $font-white;
    font-size: $font-size-x-small;
    text-align: center;
    padding: 0 20px;
  }
}
