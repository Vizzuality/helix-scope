input {
  width: 320px;
  margin: 0 20px;
  padding: 0 20px;
  outline: none;
  border: 0;
  height: 50px;
  background-color: #f7fafa;
  box-shadow: 0 0 3px 0 rgba(29, 30, 30, 0.2);
  outline: none;
  font-family: $font-body;
  font-size: 14px;
  font-style: italic;
  line-height: 1.3;
  color: #515253;
  text-align: left;

  &:hover {
    background-color: #f7fafa;
    box-shadow: 0 0 3px 0 rgba(29, 30, 30, 0.2);
  }

  &::selection {
    background-color: $color-main;
  }
}
