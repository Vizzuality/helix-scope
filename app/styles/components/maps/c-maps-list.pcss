.c-maps-list {
  border: solid 1px $color-border;

  &.-full {
    width: 100%;
    height: calc(100vh - 60px);
  }

  &.-horizontal {
    width: 100%;
    height: calc((100vh - 60px) / 2);
  }

  &.-vertical {
    width: 50%;
    height: calc(100vh - 60px);
    left: 50%;
    position: absolute;
  }

  &.-wide {
    width: 55%;
    height: calc((100vh - 60px) / 2);
  }

  &.-narrow {
    width: 45%;
    height: calc(100vh - 60px);
    position: absolute;
    left: 55%;
    top: 0;
  }

  &.-quarter {
    width: 50%;
    height: calc((100vh - 60px) / 2);
    float: left;
  }

  > .scenario-wrapper {
    height: 100%;
    position: relative;
  }
}
