.c-maps-list {
  border: solid 1px $white-bone;

  &.-full {
    width: 100%;
    height: 800px;
  }

  &.-horizontal {
    width: 100%;
    height: 400px;
  }

  &.-vertical {
    width: 50%;
    height: 800px;
    left: 50%;
    position: absolute;
  }

  &.-wide {
    width: 55%;
    height: 400px;
  }

  &.-narrow {
    width: 45%;
    height: 800px;
    position: absolute;
    left: 55%;
    top: 0;
  }

  &.-quarter {
    width: 50%;
    height: 400px;
    float: left;
  }
}
