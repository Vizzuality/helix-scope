.map {
  width: 100%;
  height: 100%;
}

.map-tile {
  height: 100%;

  > .map-sidebar {
    position: absolute;
    width: 261px;
    height: 398px;
    background-color: $pale-white;
    z-index: 1000;
    padding: 15px 20px;

    > .head {
      border-bottom: solid 1px #eee;
      padding: 0 0 10px;

      > .scenario {
        font-family: $font-heading;
        font-size: 18px;
        color: $color-main;
        margin-bottom: 10px;
        margin-right: 30px;
      }

    }

    > h4 {
      font-family: $font-heading;
      font-size: 11px;
      line-height: 1.1;
      letter-spacing: 1.8px;
      color: #929394;
      margin-top: 20px;
      margin-bottom: 10px;
    }

    > .indicator {
      font-family: $font-body;
      font-size: 13px;
      line-height: 1.3;
      color: #515253;
      border-bottom: solid 1px #eee;
      padding-bottom: 10px;
      display: block;
    }

    > .model-select {

      > label {
        display: flex;
        flex-direction: column;

        > input {
          float: left;
        }
      }

    }
  }
}

.leaflet-bar {
  box-shadow: 0px;
  border-radius: 10px;
}

.leaflet-touch .leaflet-bar {
    border: 0px;
}

.leaflet-top .leaflet-control {
  margin-top: 30px;
}

.leaflet-bar a {
  color: $color-main;
  border-radius: 20px !important;
  margin-right: 30px;
  margin-top: 10px;
}
