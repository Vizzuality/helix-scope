.slider-nav {
  width:100%;
  margin-bottom:20px;
  float:left;

  & button {
    lost-column: 1/3;
    height: 4px;
	  opacity: 0.2;
	  background-color: #ffffff;
    border: none;
  }

  & button:focus {
    outline: none;
    border:none;
  }

  & button:hover {
    cursor: pointer;
  }

  & .active {
    background-color: $color-main;
    opacity: 1;
  }


}
