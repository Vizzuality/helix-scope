/* Header */

.l-main-container {
  position: relative;

  > .-dark {
    background-color: $color-base-dark;
  }
}

.l-maps-container {
  position: relative;
  padding-top: 110px;
}

.wrap {
  padding: 0 100px;

  @media (--large-viewport) {
    padding: 0 60px;
  }

  @media (--medium-viewport) {
    padding: 0 30px;
  }

  @media (--mobile-viewport) {
    padding: 0 10px;
  }
}
