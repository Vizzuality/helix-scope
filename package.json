{
  "name": "helix-scope",
  "version": "1.0.0",
  "description": "This project is designed to show some results from Helix project.",
  "main": "server.js",
  "scripts": {
    "build": "webpack --config ./config/webpack.config.js --progress --profile --colors",
    "postinstall": "npm run build",
    "test": "xo && mocha --compilers js:babel-core/register --recursive --reporter nyan",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vizzuality/helix-scope.git"
  },
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com",
    "url": "http://vizzuality.com"
  },
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.11.0",
    "body-parser": "^1.15.1",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.23.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "html-webpack-plugin": "^2.21.0",
    "json-loader": "^0.5.4",
    "leaflet": "^0.7.7",
    "morgan": "^1.7.0",
    "postcss-cssnext": "^2.7.0",
    "pretty-error": "^2.0.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0"
  },
  "devDependencies": {
    "browserslist": "^1.3.4",
    "chai": "^3.5.0",
    "eslint": "^2.13.1",
    "eslint-config-xo-react": "^0.8.0",
    "eslint-plugin-react": "^5.2.2",
    "jsdom": "^9.3.0",
    "mocha": "^2.5.3",
    "postcss-loader": "^0.9.1",
    "react-addons-test-utils": "^15.1.0",
    "stylelint": "^6.9.0",
    "stylelint-config-standard": "^10.0.0",
    "stylelint-loader": "^6.0.0",
    "stylelint-webpack-plugin": "^0.2.0",
    "webpack-dev-middleware": "^1.6.1",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "mocha",
      "browser"
    ],
    "extends": "xo-react",
    "space": true,
    "rules": {
      "no-unused-vars": "warn",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never"
        }
      ],
      "xo/filename-case": 0,
      "no-console": "error"
    },
    "ignores": [
      "config/**/*.*"
    ]
  }
}
